<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PageOfIntro"
    android:orientation="horizontal"
    android:weightSum="10">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="8"
        android:layout_gravity="left"
        android:gravity="left"
        android:paddingTop="40dp"
        android:paddingBottom="10dp"
        android:layout_weight="1.5">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/person_1"
            android:layout_weight="1"
            android:paddingBottom="35dp"
            android:scaleType="fitStart"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/person_2"
            android:layout_weight="1"
            android:paddingBottom="35dp"
            android:scaleType="fitStart"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/person_3"
            android:layout_weight="1"
            android:paddingBottom="35dp"
            android:scaleType="fitStart"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/person_4"
            android:layout_weight="1"
            android:paddingBottom="35dp"
            android:scaleType="fitStart"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/person_5"
            android:layout_weight="1"
            android:paddingBottom="35dp"
            android:scaleType="fitStart"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/person_6"
            android:layout_weight="1"
            android:paddingBottom="35dp"
            android:scaleType="fitStart"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/person_7"
            android:layout_weight="1"
            android:paddingBottom="35dp"
            android:scaleType="fitStart"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/person_8"
            android:layout_weight="1"
            android:paddingBottom="35dp"
            android:scaleType="fitStart"/>
    </LinearLayout>
    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2.2"/>
    <ImageView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.5"
        android:src="@drawable/coronavirus"
        android:paddingBottom="400dp"
        android:paddingRight="15dp"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.5"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:paddingBottom="100dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="예"
            android:fontFamily="@font/jalpullineun_oneul"
            android:textStyle="bold"
            android:textColor="@color/colorTitleGrey"
            android:textSize="55dp"
            android:paddingBottom="6dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="방"
            android:fontFamily="@font/jalpullineun_oneul"
            android:textStyle="bold"
            android:textColor="@color/colorTitleGrey"
            android:textSize="55dp"
            android:paddingBottom="6dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="생"
            android:fontFamily="@font/jalpullineun_oneul"
            android:textStyle="bold"
            android:textColor="@color/colorTitleGrey"
            android:textSize="55dp"
            android:paddingBottom="6dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="활"
            android:fontFamily="@font/jalpullineun_oneul"
            android:textStyle="bold"
            android:textColor="@color/colorTitleGrey"
            android:textSize="55dp"
            android:paddingBottom="6dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3.3"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:paddingBottom="100dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="슬"
            android:fontFamily="@font/jalpullineun_oneul"
            android:textStyle="bold"
            android:textColor="@color/colorTitleGrey"
            android:textSize="50dp"
            android:paddingBottom="6dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="기"
            android:fontFamily="@font/jalpullineun_oneul"
            android:textStyle="bold"
            android:textColor="@color/colorTitleGrey"
            android:textSize="50dp"
            android:paddingBottom="6dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="로"
            android:fontFamily="@font/jalpullineun_oneul"
            android:textStyle="bold"
            android:textColor="@color/colorTitleGrey"
            android:textSize="50dp"
            android:paddingBottom="6dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="운"
            android:fontFamily="@font/jalpullineun_oneul"
            android:textStyle="bold"
            android:textColor="@color/colorTitleGrey"
            android:textSize="50dp"
            android:paddingBottom="6dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_marginTop="50dp"
            android:src="@drawable/coronavirus"/>

    </LinearLayout>

</LinearLayout>