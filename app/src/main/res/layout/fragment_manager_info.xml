<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorLightGrey">

    <LinearLayout
        android:id="@+id/manager_info_LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@color/colorWhite"
        android:padding="25dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="관리자 아이디"
            android:textColor="@color/colorDarkGrey"
            android:textSize="17dp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"/>
        <TextView
            android:id="@+id/manager_id_TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="skyp1234"
            android:textColor="@color/colorDarkGrey"
            android:textSize="15dp"
            android:layout_marginBottom="25dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="관리자 비밀번호"
            android:textColor="@color/colorDarkGrey"
            android:textSize="17dp"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"/>
        <TextView
            android:id="@+id/manager_pw_TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0102****"
            android:textColor="@color/colorDarkGrey"
            android:textSize="15dp"
            android:layout_marginBottom="25dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="관련 문의"
            android:textColor="@color/colorDarkGrey"
            android:textSize="17dp"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="jun991203@gmail.com"
            android:textColor="@color/colorDarkGrey"
            android:textSize="15dp"
            android:layout_marginBottom="120dp"/>
        <Button
            android:id="@+id/switch_to_user_Button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="일반 사용자 페이지로 전환"
            android:textColor="@color/colorMainRed"
            android:textStyle="bold"
            android:textSize="17dp"
            android:background="@drawable/button_outline_design"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>