<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginTop="15dp"
    android:padding="10dp"
    android:orientation="vertical"
    android:elevation="10dp"
    android:background="@drawable/row_round_white">

    <TextView
        android:id="@+id/selfdiagnosis_question_TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:text="호흡곤란 또는 숨 가쁨 증상이 있거나, 가슴 통증 또는 압박감의 증상이 나타났나요?"
        android:textColor="@color/colorDarkGrey"
        android:textSize="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">
        <Button
            android:id="@+id/selfdiagnosis_YES_Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="예"
            android:textSize="15dp"
            android:textColor="@color/colorDarkGrey"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/button_outline_grey"/>
        <Button
            android:id="@+id/selfdiagnosis_NO_Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="아니오"
            android:textSize="15dp"
            android:layout_marginRight="12dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/button_outline_grey"/>
    </LinearLayout>

</LinearLayout>

