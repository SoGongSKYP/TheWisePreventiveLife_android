<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/row_search_LinearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/row_search_bottom_View"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:padding="15dp">
        <TextView
            android:id="@+id/row_place_title_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="동국대학교"
            android:textColor="@color/colorDarkGrey"
            android:textSize="17dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/row_place_detail_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="서울특별시"
            android:textSize="15dp"
            android:textColor="@color/colorDarkGrey"/>
    </LinearLayout>
    <View
        android:id="@+id/row_search_bottom_View"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        app:layout_constraintTop_toBottomOf="@id/row_search_LinearLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/colorLightGrey"/>

</androidx.constraintlayout.widget.ConstraintLayout>