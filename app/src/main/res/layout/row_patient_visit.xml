<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/edittext_outline_design"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:weightSum="10"
        android:padding="15dp">
        <LinearLayout
            android:id="@+id/row_visit_text_LinearLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="9"
            android:layout_marginLeft="10dp">
            <TextView
                android:id="@+id/visit_place_title_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="동국대학교 신공학관"
                android:textSize="15dp"
                android:textColor="@color/colorDarkGrey"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/visit_place_date_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2020.11.03"
                android:textSize="15dp"
                android:textColor="@color/colorDarkGrey" />
        </LinearLayout>
        <ImageButton
            android:id="@+id/row_visit_delete_Button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/delete"
            android:background="@null"
            android:layout_weight="1"
            android:padding="5dp"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>